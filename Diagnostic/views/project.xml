<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!--tree view of the project model-->
    <record id="project_tree" model="ir.ui.view">
        <field name="name">diagnosis.project.tree</field>
        <field name="model">diagnosis.project</field>
        <field name="arch" type="xml">
            <tree string="Projects">
                <field name="name_seq"/>
                <field name="project_name"/>
                <field name="client"/>
            </tree>
        </field>
    </record>

<!--form view of the project model-->
    <record id="project_form" model="ir.ui.view">
        <field name="name">diagnosis.project.form</field>
        <field name="model">diagnosis.project</field>
        <field name="arch" type="xml">
            <form string="Projects">
               <sheet>
                <group>
                    <field name="project_name"/>
                    <field name="client"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="email_address"/>
                    <field name="address"/>
                </group>


               </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" option="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

 <!--action of the project menu-->
   <record id="action_diagnosis_project" model="ir.actions.act_window">
            <field name="name">Projects</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">diagnosis.project</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create your first project
              </p>
            </field>
        </record>


    <menuitem id="diagnosis_root" name="Diagnosis" sequence="1"/>
    <menuitem id="diagnosis_project" name="Projects" parent="diagnosis_root" action="action_diagnosis_project"/>


</odoo>